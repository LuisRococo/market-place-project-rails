<div class="row">
    <div class="col-md-10 offset-md-1 reviews-form">
        <h1 class="text-center form-header-style mt-5 pt-2 pb-3">
        Add Comments
        </h1>

        <div class="form-body-style px-5 pt-4">
            <%= form_with model:[product, comment], local: true do |f| %>
                <div class='form-group row'>
                    <%= f.label :body, 'New Comment', class: 'col-md-2 col-form-label' %>
                <div class='col-md-9'>
                    <%= 
                        f.text_area :body, 
                        rows: 5, 
                        class: 'form-control', 
                        placeholder: 'Your comment' 
                    %>
                </div>
                </div>

                <div class='form-group row'>
                <div class='offset-md-2 col-md-9'>
                    <%= 
                        f.submit 'Add comment', 
                        class: 'btn btn-outline-purple btn-lg' 
                    %>
                </div>
                </div>
            <% end %>
        </div>
    </div>
</div>